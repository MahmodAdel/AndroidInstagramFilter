<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main"
    >
    <ja.burhanrashid52.photoeditor.PhotoEditorView
        android:scaleType="centerCrop"
        android:id="@+id/image_preview"
        android:layout_width="match_parent"
        android:layout_height="360dp" />
 <HorizontalScrollView
     android:layout_alignParentBottom="true"
     android:fillViewport="true"
     android:measureAllChildren="false"
     android:scrollbars="none"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <LinearLayout
         android:orientation="horizontal"
         android:padding="10dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/btn_filters_list"
            android:padding="16dp"
            app:cardBackgroundColor="@color/cardview_dark_background"
            android:layout_width="80dp"
            android:layout_height="80dp">
            <LinearLayout
                android:layout_gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_broken_image_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <TextView
                    android:textAlignment="center"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="Filters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
         <android.support.v7.widget.CardView
             android:id="@+id/btn_edit"
             android:padding="16dp"
             android:layout_marginLeft="8dp"
             app:cardBackgroundColor="@color/cardview_dark_background"
             android:layout_width="80dp"
             android:layout_height="80dp">
             <LinearLayout
                 android:layout_gravity="center_vertical|center_horizontal"
                 android:orientation="vertical"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">
                 <ImageView
                     android:layout_gravity="center_horizontal|center_vertical"
                     android:src="@drawable/ic_edit_white_24dp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
                 <TextView
                     android:textAlignment="center"
                     android:textSize="10sp"
                     android:textStyle="bold"
                     android:textColor="@android:color/white"
                     android:text="Edit"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
             </LinearLayout>

         </android.support.v7.widget.CardView>
         <android.support.v7.widget.CardView
             android:id="@+id/btn_brunsh"
             android:layout_marginLeft="8dp"
             android:padding="16dp"
             app:cardBackgroundColor="@color/cardview_dark_background"
             android:layout_width="80dp"
             android:layout_height="80dp">
             <LinearLayout
                 android:layout_gravity="center_vertical|center_horizontal"
                 android:orientation="vertical"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">
                 <ImageView
                     android:layout_gravity="center_horizontal|center_vertical"
                     android:src="@drawable/ic_brush_black_24dp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
                 <TextView
                     android:textAlignment="center"
                     android:textSize="10sp"
                     android:textStyle="bold"
                     android:textColor="@android:color/white"
                     android:text="Brush"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
             </LinearLayout>

         </android.support.v7.widget.CardView>

         <android.support.v7.widget.CardView
             android:id="@+id/btn_emoji"
             android:layout_marginLeft="8dp"
             android:padding="16dp"
             app:cardBackgroundColor="@color/cardview_dark_background"
             android:layout_width="80dp"
             android:layout_height="80dp">
             <LinearLayout
                 android:layout_gravity="center_vertical|center_horizontal"
                 android:orientation="vertical"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">
                 <ImageView
                     android:layout_gravity="center_horizontal|center_vertical"
                     android:src="@drawable/ic_insert_emoticon_black_24dp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
                 <TextView
                     android:textAlignment="center"
                     android:textSize="10sp"
                     android:textStyle="bold"
                     android:textColor="@android:color/white"
                     android:text="Emoji"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
             </LinearLayout>

         </android.support.v7.widget.CardView>

         <android.support.v7.widget.CardView
             android:id="@+id/btn_add_text"
             android:layout_marginLeft="8dp"
             android:padding="16dp"
             app:cardBackgroundColor="@color/cardview_dark_background"
             android:layout_width="80dp"
             android:layout_height="80dp">
             <LinearLayout
                 android:layout_gravity="center_vertical|center_horizontal"
                 android:orientation="vertical"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">
                 <ImageView
                     android:layout_gravity="center_horizontal|center_vertical"
                     android:src="@drawable/ic_text_fields_black_24dp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
                 <TextView
                     android:textAlignment="center"
                     android:textSize="10sp"
                     android:textStyle="bold"
                     android:textColor="@android:color/white"
                     android:text="Text"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
             </LinearLayout>

         </android.support.v7.widget.CardView>


         <android.support.v7.widget.CardView
             android:id="@+id/btn_add_image"
             android:layout_marginLeft="8dp"
             android:padding="16dp"
             app:cardBackgroundColor="@color/cardview_dark_background"
             android:layout_width="80dp"
             android:layout_height="80dp">
             <LinearLayout
                 android:layout_gravity="center_vertical|center_horizontal"
                 android:orientation="vertical"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">
                 <ImageView
                     android:layout_gravity="center_horizontal|center_vertical"
                     android:src="@drawable/ic_image_white_24dp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
                 <TextView
                     android:textAlignment="center"
                     android:textSize="10sp"
                     android:textStyle="bold"
                     android:textColor="@android:color/white"
                     android:text="Add Image"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
             </LinearLayout>

         </android.support.v7.widget.CardView>


         <android.support.v7.widget.CardView
             android:id="@+id/btn_add_frame"
             android:layout_marginLeft="8dp"
             android:padding="16dp"
             app:cardBackgroundColor="@color/cardview_dark_background"
             android:layout_width="80dp"
             android:layout_height="80dp">
             <LinearLayout
                 android:layout_gravity="center_vertical|center_horizontal"
                 android:orientation="vertical"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">
                 <ImageView
                     android:layout_gravity="center_horizontal|center_vertical"
                     android:src="@drawable/ic_filter_frames_black_24dp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
                 <TextView
                     android:textAlignment="center"
                     android:textSize="10sp"
                     android:textStyle="bold"
                     android:textColor="@android:color/white"
                     android:text="Frames"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
             </LinearLayout>

         </android.support.v7.widget.CardView>

         <android.support.v7.widget.CardView
             android:id="@+id/btn_crop"
             android:layout_marginLeft="8dp"
             android:padding="16dp"
             app:cardBackgroundColor="@color/cardview_dark_background"
             android:layout_width="80dp"
             android:layout_height="80dp">
             <LinearLayout
                 android:layout_gravity="center_vertical|center_horizontal"
                 android:orientation="vertical"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">
                 <ImageView
                     android:layout_gravity="center_horizontal|center_vertical"
                     android:src="@drawable/ic_crop_black_24dp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
                 <TextView
                     android:textAlignment="center"
                     android:textSize="10sp"
                     android:textStyle="bold"
                     android:textColor="@android:color/white"
                     android:text="Crop"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
             </LinearLayout>

         </android.support.v7.widget.CardView>




     </LinearLayout>
 </HorizontalScrollView>

</RelativeLayout>